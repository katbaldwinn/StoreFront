@model Candle.DATA.EF.Models.Product

@{
    ViewData["Title"] = "Product Details";
}

<div class="breadcrumb-section breadcrumb-bg">
     <div class="container">
          <div class="row">
               <div class="col-lg-8 offset-lg-2 text-center">
                    <div class="breadcrumb-text">
                         <h1>@ViewBag.Title</h1>
                         <br />
                    </div>
               </div>
          </div>
     </div>
</div>


<div class="container justify-content-center pr-5 mr-5">
     <br />
     <br />
     <div class="col-md-8 fs-4" style="font-size:large">
          <div>
               <dl class="row">
                    <dt class="col-sm-2">
                         @Html.DisplayNameFor(model => model.ProductPrice)
                    </dt>
                    <dd class="col-sm-10">
                         @Html.DisplayFor(model => model.ProductPrice)
                    </dd>
                    <dt class="col-sm-2">
                         @Html.DisplayNameFor(model => model.ProductName)
                    </dt>
                    <dd class="col-sm-10">
                         @Html.DisplayFor(model => model.ProductName)
                    </dd>
                    <dt class="col-sm-2">
                         @Html.DisplayNameFor(model => model.ProductDescription)
                    </dt>
                    <dd class="col-sm-10">
                         @Html.DisplayFor(model => model.ProductDescription)
                    </dd>
                    <dt class="col-sm-2">
                         @Html.DisplayNameFor(model => model.ProductImage)
                    </dt>
                    <dd class="col-sm-10">
                         @Html.DisplayFor(model => model.ProductImage)
                    </dd>
                    <dt class="col-sm-2">
                         @Html.DisplayNameFor(model => model.Category)
                    </dt>
                    <dd class="col-sm-10">
                         @Html.DisplayFor(model => model.Category.CategoryName)
                    </dd>
                    <dt class="col-sm-2">
                         @Html.DisplayNameFor(model => model.Status)
                    </dt>
                    <dd class="col-sm-10">
                         @Html.DisplayFor(model => model.Status.StatusName)
                    </dd>
               </dl>
          </div>
          <div class="">
               <a asp-action="Edit" asp-route-id="@Model.ProductId" id="custom-button">Edit</a> 
               <a asp-action="Index" id="custom-button">Back to Products</a>
          </div>
     </div>
     <br />
     <br />
</div>
