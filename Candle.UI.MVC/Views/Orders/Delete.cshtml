@model Candle.DATA.EF.Models.Order

@{
	ViewData["Title"] = "Delete Order";
}

<div class="breadcrumb-section breadcrumb-bg">
	<div class="container">
		<div class="row">
			<div class="col-lg-8 offset-lg-2 text-center">
				<div class="breadcrumb-text">
					<h1>@ViewBag.Title</h1>
					<br />
					<p>
						<h3 class="text-warning">Are you sure you want to delete this?</h3>

					</p>
				</div>
			</div>
		</div>
	</div>
</div>


<div class="container offset-5">
	<br />
	<br />
	<dl class="row" style="font-size:large">
		<dt class="col-sm-2">
			@Html.DisplayNameFor(model => model.IsDelivery)
		</dt>
		<dd class="col-sm-10">
			@Html.DisplayFor(model => model.IsDelivery)
		</dd>
		<dt class="col-sm-2">
			@Html.DisplayNameFor(model => model.OrderPlaced)
		</dt>
		<dd class="col-sm-10">
			@Html.DisplayFor(model => model.OrderPlaced)
		</dd>
		<dt class="col-sm-2">
			@Html.DisplayNameFor(model => model.User)
		</dt>
		<dd class="col-sm-10">
			@Html.DisplayFor(model => model.User.UserId)
		</dd>
	</dl>

	<form asp-action="Delete">
		<input type="hidden" asp-for="OrderId" />
		<input type="submit" value="Delete" class="btn btn-danger" /> 
		<a asp-action="Index" id="custom-button">Back to Orders</a>
	</form>
	<br />
	<br />
	<br />
</div>
