@model Candle.DATA.EF.Models.Category

@{
	ViewData["Title"] = "Category Details";
}

<div class="breadcrumb-section breadcrumb-bg">
	<div class="container">
		<div class="row">
			<div class="col-lg-8 offset-lg-2 text-center">
				<div class="breadcrumb-text">
					<h1>@ViewBag.Title</h1>
				</div>
			</div>
		</div>
	</div>
</div>

<div class="container pb-5">
	<br />
	<br />
	<br />
	<dl class="row">
		<div class="col-md-4 offset-4" style="font-size: large">
			<dt class="col-sm-2">
				@Html.DisplayNameFor(model => model.CategoryName)
			</dt>
			<dd class="col-sm-10">
				@Html.DisplayFor(model => model.CategoryName)
			</dd>
			<dt class="col-sm-2">
				@Html.DisplayNameFor(model => model.CategoryDescription)
			</dt>
			<dd class="col-sm-10">
				@Html.DisplayFor(model => model.CategoryDescription)
			</dd>
		</div>
		<div class="col-md-4 offset-4 pt-3 mb-5">
			<a asp-action="Edit" asp-route-id="@Model.CategoryId" id="custom-button">Edit</a> 
			<a asp-action="Index" id="custom-button">Back to Categories</a>
		</div>
	</dl>
</div>
