@model CreateRoleViewModel

@{
ViewData["Title"] = "Create a Role";
}

<div class="breadcrumb-section breadcrumb-bg">
     <div class="container">
          <div class="row">
               <div class="col-lg-8 offset-lg-2 text-center">
                    <div class="breadcrumb-text">
                         <h1>@ViewBag.Title</h1>
                    </div>
               </div>
          </div>
     </div>
</div>

<div class="container">
     <br />
     <br />
     <br />

     <form asp-action="CreateRole" method="post" class="mt-3" style="font-size:large">
          <div asp-validation-summary="All" class="text-danger"></div>

          <div class="form-group row">
               <label asp-for="RoleName" class="col-sm-2 col-form-label"></label>
               <div class="col-sm-10">
                    <input asp-for="RoleName" class="form-control" placeholder="Name" />
                    <span asp-validation-for="RoleName" class="text-danger"></span>
               </div>
          </div>
          <br />
          <div class="form-group row">
               <div class="col-sm-10">
                    <button type="submit" class="btn btn-primary" id="custom-button" style="width:auto">
                         Create Role
                    </button>
               </div>
          </div>
     </form>
     <br />
     <br />
     <br />
</div>